{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": [
    "hardhat.config.ts",
    "types/**/*.ts",
    "scripts/**/*.ts",
    "tasks/**/*.ts",
    "test/**/*.ts",
    "ignition/**/*.ts",
    "eslint.config.js",
    "prettier.config.js"
  ]
}
